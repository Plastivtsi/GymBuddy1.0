@model DAL.Models.Training

@{
    ViewData["Title"] = "Редагувати тренування";
}

<h1>Редагувати тренування</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Template" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">Назва</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата</label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label">Час (HH:mm:ss)</label>
                <input name="Time" class="form-control" type="text" value="@Model.Time.ToString(@"hh\:mm\:ss")" required pattern="([0-1]?[0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Опис</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <h4>Вправи</h4>
            @if (Model.Exercises != null)
            {
                for (int i = 0; i < Model.Exercises.Count; i++)
                {
                    <div class="form-group">
                        <input type="hidden" asp-for="Exercises[i].Id" />
                        <label asp-for="Exercises[i].Name" class="control-label">Назва вправи</label>
                        <input asp-for="Exercises[i].Name" class="form-control" required />
                        <span asp-validation-for="Exercises[i].Name" class="text-danger"></span>

                        <label asp-for="Exercises[i].Weight" class="control-label">Вага (кг)</label>
                        <input asp-for="Exercises[i].Weight" class="form-control" type="number" step="0.1" />
                        <span asp-validation-for="Exercises[i].Weight" class="text-danger"></span>

                        <label asp-for="Exercises[i].Repetitions" class="control-label">Повторення</label>
                        <input asp-for="Exercises[i].Repetitions" class="form-control" type="number" />
                        <span asp-validation-for="Exercises[i].Repetitions" class="text-danger"></span>

                        <label asp-for="Exercises[i].Notes" class="control-label">Нотатки</label>
                        <textarea asp-for="Exercises[i].Notes" class="form-control"></textarea>
                        <span asp-validation-for="Exercises[i].Notes" class="text-danger"></span>
                    </div>
                }
            }

            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}