@model DAL.Models.Training

@{
    ViewData["Title"] = "Створити тренування";
}

<h2>Створити тренування</h2>

<form asp-action="CreateTrainingPost" method="post">
    <div class="form-group">
        <label asp-for="Name">Назва</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date">Дата</label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Time">Тривалість</label>
        <input asp-for="Time" class="form-control" type="time" step="1" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Опис</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserId">ID користувача</label>
        <input asp-for="UserId" class="form-control" type="number" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Створити</button>
</form>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-info mt-3">
        @ViewData["Message"]
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}