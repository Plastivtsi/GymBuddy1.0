@{
    ViewData["Title"] = "Підтвердження відновлення паролю";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Include Tailwind CSS via CDN -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<div class="container mx-auto px-4 py-8 max-w-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Перевірте вашу пошту</h2>
    <div class="bg-white shadow-md rounded-lg p-6 text-center">
        <p class="text-gray-700 mb-4">
            Ми надіслали вам email із посиланням для скидання паролю. Будь ласка, перевірте вашу поштову скриньку.
        </p>
        <p class="text-gray-600">
            Повернутися до <a asp-action="Login" asp-controller="Account" class="text-blue-500 hover:underline">входу</a>
        </p>
    </div>
</div>

<style>
    header, footer {
        display: none;
    }
</style>