@model PL.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Скидання паролю";
}

<div class="container-center">
    <h2>Скидання паролю</h2>

    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <form method="post" asp-action="ResetPassword">
        <input type="hidden" asp-for="Token" />
        <input type="hidden" asp-for="UserId" /> <!-- Додаємо UserId -->
       
        <div class="form-group">
            <label asp-for="Email">Електронна пошта</label>
            <input asp-for="Email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Новий пароль</label>
            <input asp-for="Password" class="form-control" type="password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Підтвердити пароль</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" required />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Скинути пароль</button>
    </form>

    <p>Повернутися до <a asp-action="Login">входу</a></p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}