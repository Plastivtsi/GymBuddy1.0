@model PL.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Відновлення паролю";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Include Tailwind CSS via CDN -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<div class="container mx-auto px-4 py-8 max-w-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Відновлення паролю</h2>

    <!-- Error Messages -->
    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
    {
        <div class="bg-red-100 text-red-800 p-4 rounded-md mb-6">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <!-- Forgot Password Form -->
    <form method="post" asp-action="ForgotPassword" class="bg-white shadow-md rounded-lg p-6">
        <div class="mb-4">
            <label asp-for="Email" class="block text-gray-700 font-medium mb-2">Електронна пошта</label>
            <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>
        <button type="submit" class="w-full bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition">
            Надіслати
        </button>
    </form>

    <!-- Back to Login Link -->
    <p class="mt-4 text-center text-gray-600">
        Повернутися до <a asp-action="Login" class="text-blue-500 hover:underline">входу</a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    header, footer {
        display: none;
    }
</style>