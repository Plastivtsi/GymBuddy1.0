@model DAL.Models.Training

@{
    ViewData["Title"] = "Створити тренування";
}

<h2>Створити нове тренування</h2>

<form asp-action="CreateTraining" method="post">
    <div class="form-group">
        <label asp-for="Name">Назва</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date">Дата</label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Time">Тривалість</label>
        <input asp-for="Time" type="time" class="form-control" step="1" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Опис</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserId">ID Користувача</label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Створити</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">
        @ViewBag.Message
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}