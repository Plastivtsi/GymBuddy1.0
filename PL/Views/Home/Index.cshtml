@{
    ViewData["Title"] = "Home Page";
   // Layout = "~/Views/Shared/_Layout.cshtml";

}

<!-- Відображення імені користувача -->
<h2>Вітаємо, @User.Identity.Name</h2>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <!-- Навігаційні кнопки -->
    <div class="navigation-buttons" style="margin: 20px 0;">
        <a href="@Url.Action("Index", "Friendship")" class="btn btn-primary">Друзі</a>
        <a href="@Url.Action("Index", "Training")" class="btn btn-primary">Тренування</a>
        <a href="@Url.Action("Index", "Profile")" class="btn btn-primary">Профіль</a>
        <a href="@Url.Action("Index", "Calendar")" class="btn btn-primary">Календар</a>
        <a href="@Url.Action("Logout", "Account")" class="btn btn-danger">Вихід</a>
        <a href="@Url.Action("RequestAndBanned", "Friendship")" class="btn btn-primary">Запити</a>

    </div>

    <!-- Місце для графіка та звіту -->
    <div class="chart-container" style="margin-top: 30px;">
        <h3>Графік прогресу</h3>
        <div id="chart" style="width: 100%; height: 400px; border: 1px solid #ccc;">
            <!-- Тут буде відображатися графік -->
        </div>
        <div class="chart-report" style="margin-top: 20px;">
            <h4>Звіт по графіку</h4>
            <p>Тут буде детальна інформація про прогрес</p>
        </div>
    </div>

    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<!-- Додатковий стиль -->
<style>
    .navigation-buttons .btn {
        margin: 0 10px;
    }
    .chart-container {
        max-width: 800px;
        margin: 0 auto;
    }
</style>