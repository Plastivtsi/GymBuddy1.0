@model PL.Controllers.RegisterViewModel

@{
    ViewData["Title"] = "Реєстрація нового адміністратора";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Include Tailwind CSS via CDN -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<style>
    header, footer {
        display: none;
    }
</style>

<div class="container mx-auto px-4 py-8 max-w-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Реєстрація нового адміністратора</h2>

    <!-- Registration Form -->
    <form asp-action="RegisterAdmin" method="post" class="bg-white shadow-md rounded-lg p-6">
        <div class="mb-4">
            <label asp-for="UserName" class="block text-gray-700 font-medium mb-2">Ім'я користувача</label>
            <input asp-for="UserName" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
            <span asp-validation-for="UserName" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Email" class="block text-gray-700 font-medium mb-2">Email</label>
            <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Password" class="block text-gray-700 font-medium mb-2">Пароль</label>
            <input asp-for="Password" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-6">
            <label asp-for="ConfirmPassword" class="block text-gray-700 font-medium mb-2">Підтвердження пароля</label>
            <input asp-for="ConfirmPassword" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
            <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
        </div>

        <div class="flex flex-col sm:flex-row gap-3">
            <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600 transition">
                Зареєструвати
            </button>
            <a asp-action="HomeAdmin" class="bg-gray-500 text-white px-6 py-2 rounded-md hover:bg-gray-600 transition text-center">
                Назад до адмін-панелі
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}